body{font-family:'Ubuntu', 'Lato', sans-serif}.fon{-webkit-font-smoothing:antialiased;font-weight:lighter;text-shadow:1px 1px 1px rgba(0, 0, 0, 0)}div.container{width:45%;padding:auto;margin:auto;text-align:center;box-sizing:border-box}div.grond{background-image:url(https://www.frolicme.com/wp-content/uploads/2016/11/HOME-PAGE-HEADER-900-127.jpg);width:900px;height:370px;padding:auto;margin:auto;border-radius:15px;box-sizing:border-box;border:2px solid #ccc;border:1px solid gray}div.conv{width:35%;padding:auto;margin:auto;text-align:center}div.mar{width:870px;padding:auto;margin:auto}input[type=text],select{text-align:center;width:50%;padding:5px 10px;margin:8px 0;display:inline-block;border:1px solid #ccc;border-radius:5px;box-sizing:border-box;font-family:'Ubuntu', 'Lato', sans-serif}.button{position:relative;background-color:#3b5998;border:none;color:white;padding:5px 10px;width:20%;margin:8px 0;text-align:center;border-radius:5px;overflow:hidden;cursor:progress}.button:after{content:"";background:#dfe3ee;display:block;position:absolute;padding-top:300%;padding-left:350%;margin-left:-20px !important;margin-top:-120%;opacity:0;transition:all 0.8s}.button:active:after{padding:0;margin:0;opacity:1;transition:0s}
